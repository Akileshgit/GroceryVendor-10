<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

   <ScrollView
       android:id="@+id/scrollView1"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="@dimen/space_10">
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <Fonts.LatoBLack
                android:id="@+id/tv_add_adres_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reg_name_hint"
                android:textColor="#000"
                android:textSize="14sp" />



         </LinearLayout>


         <EditText
             android:id="@+id/et_add_adres_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:clickable="false"
             android:cursorVisible="false"
             android:editable="false"
             android:ems="10"
             android:focusable="false"
             android:focusableInTouchMode="false"
             android:gravity="center_horizontal"
             android:inputType="textEmailAddress"
             android:padding="@dimen/space_10"
             android:textAlignment="center"
             android:textColor="#000"
             android:textColorHint="@color/black"
             android:textSize="@dimen/text_size_normal" />
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <Fonts.LatoBLack
                android:id="@+id/tv_add_adres_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_deli_mobile"
                android:textColor="#000"
                android:textSize="14sp" />



         </LinearLayout>


         <EditText
             android:id="@+id/et_add_adres_phone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:clickable="false"
             android:cursorVisible="false"
             android:editable="false"
             android:ems="10"
             android:focusable="false"
             android:focusableInTouchMode="false"
             android:gravity="center_horizontal"
             android:inputType="textEmailAddress"
             android:padding="@dimen/space_10"
             android:textAlignment="center"
             android:textColor="#000"
             android:textColorHint="@color/black"
             android:textSize="@dimen/text_size_normal" />

         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <Fonts.LatoBLack
                android:id="@+id/tv_add_adres_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reg_pincode"
                android:textColor="#000"
                android:textSize="14sp" />



         </LinearLayout>


         <EditText
             android:id="@+id/et_add_adres_pin"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:ems="10"
             android:hint="12345"
             android:textColor="#000"
             android:textColorHint="#000"
             android:textSize="@dimen/space_14" />
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <Fonts.LatoBLack
                android:id="@+id/tv_add_adres_socity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reg_socity"
                android:textColor="#000"
                android:textSize="14sp" />



         </LinearLayout>


         <Fonts.LatoBLack
             android:id="@+id/btn_add_adres_socity"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:layout_marginBottom="8dp"
             android:drawableEnd="@drawable/arrow_right"
             android:drawableRight="@drawable/arrow_right"
             android:gravity="start|center_vertical"
             android:text="@string/btn_reg_socity_choose"
             android:textColor="#000"
             android:textSize="@dimen/space_14" />
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <Fonts.LatoBLack
                android:id="@+id/tv_add_adres_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reg_house"
                android:textColor="#000"
                android:textSize="14sp" />



         </LinearLayout>


         <EditText
             android:id="@+id/et_add_adres_home"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:inputType="text"
             android:textSize="@dimen/space_14" />

         <RelativeLayout
             android:id="@+id/btn_add_adres_edit"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_margin="12dp"
             android:background="@color/greenn"
             android:padding="12dp">

            <Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/add_del"
                android:textColor="#070606"
                android:textSize="@dimen/text_size_small" />


         </RelativeLayout>
      </LinearLayout>
   </ScrollView>
</LinearLayout>